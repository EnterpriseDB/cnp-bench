{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "cnpImage": {
            "type": "string"
        },
        "cnpInstances": {
            "type": "integer"
        },
        "cnpMonitoring": {
            "type": "object",
            "properties": {
                "customQueriesConfigMap": {
                    "type": "array"
                },
                "customQueriesSecret": {
                    "type": "array"
                }
            }
        },
        "cnpNodeSelector": {
            "type": "object",
            "properties": {
                "workload": {
                    "type": "string"
                }
            }
        },
        "cnpPostgreSQLParameters": {
            "type": "object",
            "properties": {
                "log_autovacuum_min_duration": {
                    "type": "string"
                },
                "log_checkpoints": {
                    "type": "string"
                },
                "log_line_prefix": {
                    "type": "string"
                },
                "log_lock_waits": {
                    "type": "string"
                },
                "log_min_duration_statement": {
                    "type": "string"
                },
                "log_statement": {
                    "type": "string"
                },
                "log_temp_files": {
                    "type": "string"
                },
                "maintenance_work_mem": {
                    "type": "string"
                },
                "shared_buffers": {
                    "type": "string"
                }
