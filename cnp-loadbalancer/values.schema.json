{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "cnpMonitoring": {
            "type": "object",
            "properties": {
                "customQueriesConfigMap": {
                    "type": "array"
                },
                "customQueriesSecret": {
                    "type": "array"
                }
            }
        },
        "image": {
            "type": "string"
        },
        "instances": {
            "type": "integer"
        },
        "nodeSelector": {
            "type": "object",
            "properties": {
                "workload": {
                    "type": "string"
                }
            }
        },
        "pooler": {
            "type": "object",
            "properties": {
                "instances": {
                    "type": "integer"
                },
                "pgbouncer": {
                    "type": "object",
                    "properties": {
                        "parameters": {
                            "type": "object"
                        },
                        "poolMode": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "postgreSQLParameters": {
            "type": "object",
            "properties": {
                "log_autovacuum_min_duration": {
                    "type": "string"
                },
                "log_checkpoints": {
                    "type": "string"
                },
                "log_line_prefix": {
                    "type": "string"
                },
                "log_lock_waits": {
                    "type": "string"
                },
                "log_min_duration_statement": {
                    "type": "string"
                },
                "log_statement": {
                    "type": "string"
                },
                "log_temp_files": {
                    "type": "string"
                },
                "maintenance_work_mem": {
                    "type": "string"
                },
                "shared_buffers": {
                    "type": "string"
                }
            }
        },
        "size": {
            "type": "string"
        },
        "storageClass": {
            "type": "string"
        }
    }
}
