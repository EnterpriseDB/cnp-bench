            "type": "integer"
        },
        "pgbenchNodeSelector": {
            "type": "object",
            "properties": {
                "workload": {
                    "type": "string"
                }
            }
        },
        "pgbenchScaleFactor": {
            "type": "integer"
        },
        "pgbenchTime": {
            "type": "integer"
        },
        "pgbenchWarmTime": {
            "type": "integer"
        },
        "pooler": {
            "type": "object",
            "properties": {
                "instances": {
                    "type": "integer"
                },
                "nodeSelector": {
                    "type": "object",
                    "properties": {
                        "workload": {
                            "type": "string"
                        }
                    }
                },
                "pgbouncer": {
                    "type": "object",
                    "properties": {
                        "parameters": {
                            "type": "object"
                        },
                        "poolMode": {
                            "type": "string"
                        }
                    }
                }
            }
        }
